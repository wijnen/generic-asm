#!NAME --defs

# program memory
memory: 0xdc00 0x2000
# interrupt vectors
memory: 0xfff0 0x10

directive: org .org
directive: defb .defb
directive: defb .db
directive: equ .equ
directive: include .include
directive: incbin .incbin
directive: macro .macro
directive: endmacro .endmacro
directive: if .if
directive: else .else
directive: endif .endif
directive: ; ;

num: .word
constraint: .word >= -0x8000 && .word <= 0xffff

source: .defw .word
target: .word >> 8
target: .word & 0xff

source: .dw .word
target: .word >> 8
target: .word & 0xff

num: .bit
mask: 0x7

num: .dir2
mask: 0xff
prefix: dir_

num: .dir
mask: 0xff
prefix: dir_

num: .ext
mask: 0xffff

num: .imm
constraint: .imm >= -0x80 && .imm <= 0xff

num: .aimm
constraint: .aimm >= -0x80 && .aimm <= 0x7f

num: .ix1
mask: 0xff

num: .ix2
constraint: .ix2 >= -0x8000 && .ix2 <= 0xffff	# Allow negative indices, because they wrap anyway.

num: .reladdr4
mask: 0xffff
constraint: .reladdr - $ + 4 >= -0x80 && .reladdr - $ + 4 < 0x80
prefix: a_

num: .reladdr3
mask: 0xffff
constraint: .reladdr - $ + 3 >= -0x80 && .reladdr - $ + 3 < 0x80
prefix: a_

num: .reladdr
mask: 0xffff
constraint: .reladdr - $ + 2 >= -0x80 && .reladdr - $ + 2 < 0x80
prefix: a_

num: .addr
mask: 0xffff
prefix: a_

macro: .stax .cmd .base

source: .cmd * .dir
target: .base + 0xb0
target: .dir

source: .cmd .ext
target: .base + 0xc0
target: .ext >> 8
target: .ext & 0xff

source: .cmd .ix1 , x
target: .base + 0xe0
target: .ix1

source: .cmd .ix2 , x
target: .base + 0xd0
target: .ix2 >> 8
target: .ix2 & 0xff

source: .cmd , x
target: .base + 0xf0

source: .cmd .ix1 , sp
target: 0x9e
target: .base + 0xe0
target: .ix1

source: .cmd .ix2 , sp
target: 0x9e
target: .base + 0xd0
target: .ix2 >> 8
target: .ix2 & 0xff

endmacro:

macro: .ldax .cmd .base

source: .cmd # .imm
target: .base + 0xa0
target: .imm

.stax .cmd .base

endmacro:

macro: .regop .cmd .base
